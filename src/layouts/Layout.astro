---
interface Props {
  headings?: { depth: number; slug: string; text: string }[];
}

const { headings = [] } = Astro.props;
const navItems = headings.filter((h) => h.depth === 2);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Practical tips for getting the most out of LLMs and Claude Code without burning through your wallet or losing your mind."
    />
    <title>LLM & Claude Code Guide</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>⚡</text></svg>" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,400..700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <a href="/" class="logo-link">
          <span class="logo">&gt;_</span>
          <span class="logo-text">LLM Guide</span>
        </a>
      </div>
      <nav class="sidebar-nav">
        {
          navItems.map((item) => (
            <a
              href={`#${item.slug}`}
              class="nav-link"
              data-section={item.slug}
            >
              {item.text}
            </a>
          ))
        }
      </nav>
    </aside>

    <div class="overlay" id="overlay"></div>

    <div class="main">
      <header class="mobile-header" id="mobile-header">
        <button class="menu-btn" id="menu-btn" aria-label="Toggle navigation">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
          >
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
        <span class="mobile-title">LLM Guide</span>
      </header>

      <article class="content">
        <slot />
      </article>
    </div>

    <script>
      const menuBtn = document.getElementById("menu-btn");
      const sidebar = document.getElementById("sidebar");
      const overlay = document.getElementById("overlay");

      function toggleMenu() {
        sidebar?.classList.toggle("open");
        overlay?.classList.toggle("open");
        document.body.classList.toggle("menu-open");
      }

      menuBtn?.addEventListener("click", toggleMenu);
      overlay?.addEventListener("click", toggleMenu);

      document.querySelectorAll(".nav-link").forEach((link) => {
        link.addEventListener("click", () => {
          if (window.innerWidth < 1024) {
            toggleMenu();
          }
        });
      });

      const sections = document.querySelectorAll("h2[id]");
      const navLinks = document.querySelectorAll(".nav-link");

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              navLinks.forEach((l) => l.classList.remove("active"));
              const active = document.querySelector(
                `.nav-link[data-section="${entry.target.id}"]`,
              );
              active?.classList.add("active");
            }
          });
        },
        { rootMargin: "-10% 0px -70% 0px" },
      );

      sections.forEach((s) => observer.observe(s));
    </script>
  </body>
</html>

<style is:global>
  :root {
    --bg: #f8fafc;
    --text: #334155;
    --text-heading: #0f172a;
    --text-muted: #64748b;
    --text-strong: #1e293b;
    --border: #e2e8f0;
    --link: #6366f1;
    --link-underline: rgba(99, 102, 241, 0.3);
    --code-bg: #e2e8f0;
    --code-text: #1e293b;
    --pre-border: #1e293b;
    --table-header-bg: #f1f5f9;
    --blockquote-bg: rgba(129, 140, 248, 0.04);
    --blockquote-text: #475569;
    --sidebar-bg: #0f172a;
    --sidebar-text: #94a3b8;
    --sidebar-text-hover: #cbd5e1;
    --sidebar-text-active: #f1f5f9;
    --sidebar-border: rgba(148, 163, 184, 0.08);
    --sidebar-active-bg: rgba(129, 140, 248, 0.08);
    --sidebar-hover-bg: rgba(148, 163, 184, 0.06);
    --accent: #818cf8;
    --accent-bg: rgba(129, 140, 248, 0.1);
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --bg: #111827;
      --text: #cbd5e1;
      --text-heading: #f1f5f9;
      --text-muted: #94a3b8;
      --text-strong: #e2e8f0;
      --border: #1e293b;
      --link: #a5b4fc;
      --link-underline: rgba(165, 180, 252, 0.3);
      --code-bg: #1e293b;
      --code-text: #e2e8f0;
      --pre-border: #334155;
      --table-header-bg: #1e293b;
      --blockquote-bg: rgba(129, 140, 248, 0.08);
      --blockquote-text: #94a3b8;
      --sidebar-bg: #0b1120;
      --sidebar-border: rgba(148, 163, 184, 0.06);
    }
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
    scroll-padding-top: 1.5rem;
  }

  body {
    font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
      sans-serif;
    background: var(--bg);
    color: var(--text);
    line-height: 1.75;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* ── Sidebar ── */

  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 280px;
    height: 100vh;
    background: var(--sidebar-bg);
    color: var(--sidebar-text);
    display: flex;
    flex-direction: column;
    z-index: 100;
    overflow-y: auto;
    overscroll-behavior: contain;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sidebar-header {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--sidebar-border);
    flex-shrink: 0;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: #e2e8f0;
  }

  .logo {
    font-family: "JetBrains Mono", monospace;
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--accent);
    background: var(--accent-bg);
    padding: 0.2rem 0.5rem;
    border-radius: 6px;
  }

  .logo-text {
    font-size: 1.05rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .sidebar-nav {
    flex: 1;
    padding: 0.75rem 0;
    overflow-y: auto;
  }

  .nav-link {
    display: block;
    padding: 0.55rem 1.5rem;
    color: var(--sidebar-text);
    text-decoration: none;
    font-size: 0.835rem;
    line-height: 1.5;
    border-left: 2px solid transparent;
    transition: all 0.15s ease;
  }

  .nav-link:hover {
    color: var(--sidebar-text-hover);
    background: var(--sidebar-hover-bg);
  }

  .nav-link.active {
    color: var(--sidebar-text-active);
    border-left-color: var(--accent);
    background: var(--sidebar-active-bg);
  }

  /* ── Main ── */

  .main {
    margin-left: 280px;
    min-height: 100vh;
  }

  .mobile-header {
    display: none;
  }

  .content {
    max-width: 760px;
    margin: 0 auto;
    padding: 3.5rem 2.5rem 8rem;
  }

  .overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
    z-index: 90;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .overlay.open {
    display: block;
    opacity: 1;
  }

  /* ── Prose ── */

  .content h1 {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--text-heading);
    letter-spacing: -0.025em;
    line-height: 1.2;
    margin-bottom: 0.5rem;
  }

  .content h1 + p {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 2.5rem;
  }

  .content h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-heading);
    letter-spacing: -0.02em;
    line-height: 1.3;
    margin-top: 3.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  .content h2:first-child {
    margin-top: 0;
  }

  .content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-strong);
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }

  .content p {
    margin-bottom: 1rem;
    color: var(--text);
  }

  .content a {
    color: var(--link);
    text-decoration: underline;
    text-decoration-color: var(--link-underline);
    text-underline-offset: 2px;
    transition: text-decoration-color 0.15s ease;
  }

  .content a:hover {
    text-decoration-color: var(--link);
  }

  .content strong {
    font-weight: 600;
    color: var(--text-strong);
  }

  .content ul,
  .content ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .content li {
    margin-bottom: 0.4rem;
  }

  .content li > ul,
  .content li > ol {
    margin-top: 0.4rem;
    margin-bottom: 0;
  }

  .content code {
    font-family: "JetBrains Mono", "Fira Code", monospace;
    font-size: 0.85em;
    background: var(--code-bg);
    color: var(--code-text);
    padding: 0.15em 0.4em;
    border-radius: 4px;
    font-variant-ligatures: none;
  }

  .content pre {
    margin-bottom: 1.5rem;
    border-radius: 10px;
    overflow-x: auto;
    font-size: 0.875rem;
    line-height: 1.7;
    border: 1px solid var(--pre-border);
  }

  .content pre code {
    background: none;
    padding: 0;
    border-radius: 0;
    font-size: inherit;
    color: inherit;
  }

  .content blockquote {
    border-left: 3px solid var(--accent);
    padding: 0.5rem 1rem;
    margin-bottom: 1rem;
    background: var(--blockquote-bg);
    border-radius: 0 6px 6px 0;
  }

  .content blockquote p {
    color: var(--blockquote-text);
    margin-bottom: 0;
  }

  .content hr {
    border: none;
    height: 1px;
    background: var(--border);
    margin: 3rem 0;
  }

  .content table {
    width: 100%;
    margin-bottom: 1.5rem;
    border-collapse: collapse;
    font-size: 0.925rem;
  }

  .content th {
    text-align: left;
    font-weight: 600;
    color: var(--text-heading);
    padding: 0.75rem 1rem;
    border-bottom: 2px solid var(--border);
    background: var(--table-header-bg);
  }

  .content td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--border);
  }

  .content tr:last-child td {
    border-bottom: none;
  }

  .content table {
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
  }

  .content img {
    max-width: 100%;
    border-radius: 8px;
  }

  /* ── Mobile ── */

  @media (max-width: 1023px) {
    .sidebar {
      transform: translateX(-100%);
    }

    .sidebar.open {
      transform: translateX(0);
    }

    .main {
      margin-left: 0;
    }

    .mobile-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.85rem 1.25rem;
      background: var(--sidebar-bg);
      color: #e2e8f0;
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .menu-btn {
      background: none;
      border: none;
      color: inherit;
      cursor: pointer;
      padding: 0.25rem;
      display: flex;
      align-items: center;
    }

    .mobile-title {
      font-size: 0.95rem;
      font-weight: 600;
      letter-spacing: -0.01em;
    }

    .content {
      padding: 2rem 1.25rem 5rem;
    }

    .content h1 {
      font-size: 1.75rem;
    }

    .content h2 {
      font-size: 1.3rem;
      margin-top: 2.5rem;
    }

    body.menu-open {
      overflow: hidden;
    }

    html {
      scroll-padding-top: 4rem;
    }
  }

  @media (max-width: 480px) {
    .content {
      padding: 1.5rem 1rem 4rem;
    }

    .content pre {
      font-size: 0.8rem;
      border-radius: 8px;
    }
  }
</style>
